@model WorkoutHistoryApp.Models.ViewModels.UpdateWorkoutHistory

@{
    ViewBag.Title = "Edit";
}

<h2>Update WorkoutHistory</h2>
<form action="/WorkoutHistory/Update/@Model.SelectedWorkoutHistory.WorkoutHistoryID" method="POST">
    <div style="display:none;">
        @* Pass through the WorkoutHistory ID *@
        <input type="text" name="WorkoutHistoryID" value="@Model.SelectedWorkoutHistory.WorkoutHistoryID" />
    </div>

    <div>
        <label>Date:</label> <input type="date" name="Date" value="@Model.SelectedWorkoutHistory.Date" />
    </div>
    <div>
        <label>Exercise:</label>
        <select name="ExerciseID">
            @foreach (var exercise in Model.AllExercises)
            {
                string selected = "";
                if (exercise.ExerciseID == Model.SelectedWorkoutHistory.ExerciseID)
                {
                    selected = "selected";
                }
                <option value="@exercise.ExerciseID" @selected>@exercise.ExerciseName</option>
            }
        </select>
    </div>
    <div>
        <label>Description:</label>
        <textarea name="Description">@Model.SelectedWorkoutHistory.Description</textarea>
    </div>
    <div>
        <input type="submit" value="Update WorkoutHistory" />

    </div>
</form>